$avatar-small-size          = 30px
$avatar-medium-size         = 38px
$avatar-big-size            = 46px

$border-radius              = 4px

@import 'reset'
@import 'colors'
@import 'media'
@import 'typography'
@import 'buttons'


html
body
  width                     100%
  height                    100%
  background                $gray-18
  box-sizing                border-box
  font-family               $adelle-family
  font-size                 $body-font-size
  line-height               $body-line-height


*
*:before
*:after
  box-sizing                inherit
  -webkit-box-sizing        inherit
  -moz-box-sizing           inherit

.u-clearfix
  *zoom                     1

  &:before
  &:after
    content                 " "
    display                 table

  &:after
    clear                   both

main
  width                     600px
  margin                    50px auto


/* Avatar View */
.Avatar
  position                  relative
  width                     $avatar-medium-size
  height                    $avatar-medium-size
  /*\*/
  overflow                  hidden
  border-radius             $border-radius

  // .Avatar--medium  (Default size. Just for reference)
  //   width                $avatar-medium-size
  //   height               $avatar-medium-size

  &.Avatar--big
    width                   $avatar-big-size
    height                  $avatar-big-size

  &.Avatar--small
    width                   $avatar-small-size
    height                  $avatar-small-size


/* Embed View */
.Embed
  padding                   16px 0 0

.Embed--link
  .MediaObject-media
    margin-right            16px

  .Embed-image
    width                   100px
    height                  100px


/* Comment List Item View */
.CommentListItem
  padding                   12px 24px

  .MediaObject-media
    margin-right            16px

.CommentListItem-actions
  padding                   4px 0

.CommentListItem-action
  float                     left
  margin-right              6px


/* Comment List View */
.CommentList
  padding                   12px 0 0


/* Comment Form View */
.CommentForm
  padding                   12px 24px 24px

  .MediaObject-media
    margin-right            16px

.CommentForm-TextArea
  width                     100%


/* Comments View */
.Comments
  /*\*/
  background                $gray-19
  border-radius             0 0 $border-radius $border-radius
  border-top                1px solid getBorderColor()

/* Activity List Item View */
.ActivityListItem
  width                     100%
  background                $white
  border-radius             $border-radius
  border                    1px solid getBorderColor()

.ActivityListItem-header
  padding                   24px 24px 12px

  .MediaObject-media
    margin-right            16px

  .MediaObject-content a
    display                 block
    float                   left
    clear                   both

.ActivityListItem-content
  padding                   12px 24px

.ActivityListItem-actions
  padding                   12px 24px

.ActivityListItem-action
  float                     left
  margin-right              16px

.ActivityListItem-likeSummary
  padding                   12px 24px