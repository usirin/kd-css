Typography vars, constants and styles
-------------------------------------
typography.styl
*/
}

@import 'utils'
@import 'colors'

/* Constants */
$helvetica-family           = 'Helvetica Neue', 'Helvetica', 'Arial', 'sans-serif'
$adelle-family              = 'adelle-sans', 'sans-serif'
$monospace-family           = 'Andale Mono', 'AndaleMono', 'monospace'

$body-font-size             = 62.5%
$body-line-height           = 1.6em

$fs-small                   = 1.2rem
$fs-regular                 = 1.4rem
$fs-big                     = 1.6rem

$fw-heavy                   = 900
$fw-extrabold               = 800
$fw-bold                    = 700
$fw-semibold                = 600
$fw-regular                 = 400
$fw-light                   = 300
$fw-thin                    = 100


/* Styles */

/* App wide typography settings and uitls classes */

body, input, textarea, select, button
  text-rendering            optimizeLegibility
  -webkit-font-smoothing    antialiased
  -moz-osx-font-smoothing   grayscale
  vendor                    font-feature-settings, "kern" 1
  vendor                    font-kerning, normal
  vendor                    hypens, auto

.u-textLeft
  text-align                left

.u-textRight
  text-align                right

.u-textCenter
  text-align                center


/* Inline text elements */
mark
.u-mark
  padding                   .2em
  background-color          $color-marked-text-bg

a
.u-a
  color                     $color-brand
  outline-color             $color-brand

small
.u-small
  font-size                 85%

strong
.u-strong
  font-weight               $fw-semibold

em
.u-em
  font-style                italic

code
.u-code
  font-family               $monospace-family
  padding                   .2em
  border-radius             $border-radius
  background-color          $color-code-bg
  color                     $color-code

pre code
pre .u-code
  padding                   .5em .8em
  display                   block
  line-height               1.6em
  background-color          $white
  border                    1px solid $gray-18
  font-size                 $fs-regular



/* Headings */
h1, h2, h3, h4, h5, h6
.u-h1, .u-h2, .u-h3, .u-h4, .u-h5, .u-h6
  display                   block
  font-weight               $fw-semibold
  line-height               $body-line-height
  color                     $color-primary-text
  margin                    1.0rem 0

  &:first-child
    margin-top              0

  small
  .u-small
    font-size               65%
    font-weight             $fw-light
    margin-left             8px
    color                   $color-light-text

h1
.u-h1
  font-size                 3.6rem

h2
.u-h2
  font-size                 3.0rem

h3
.u-h3
  font-size                 2.4rem

h4
.u-h4
  font-size                 1.8rem

h5
.u-h5
  font-size                 1.4rem

h6
.u-h6
  font-size                 1.2rem


/* Paragraphs */
p
.u-p
  font-size                 $fs-regular
  font-weight               $fw-regular
  line-height               $body-line-height
  color                     $color-primary-text
  padding                   0.5em 0

/* Info Bars */
p.u-infoBar
.u-infoBar
  color                     $white
  padding                   .4em .6em
  margin-top                .5em
  margin-bottom             .5em
  border-radius             $border-radius


/* Blockquotes */
blockquote
.u-blockquote
  padding                   0 0 0 1.4em
  border-left               6px solid $gray-19
  margin                    0.5em 0

  p
    font-size               $fs-big

  footer
    font-size               1.4rem
    color                   $color-light-text
    padding                 0 0 0.5em

    &:before
      content               ''
      display               inline-block
      vertical-align        super
      margin-right          0.5em
      width                 0.5em
      height                1px
      background-color      $color-light-text